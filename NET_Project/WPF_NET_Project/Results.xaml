<Window x:Name="Results1" x:Class="WPF_NET_Project.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NET_Project"
        mc:Ignorable="d"
        Title="Résultats" Height="450" Width="800" Closed="Results1_Closed">
    <Grid>
        <Button Content="Pause" VerticalAlignment="Top" FontSize="16" Margin="19,19,0,0" Height="29" HorizontalAlignment="Left" Width="100"/>
        <Button Content="Reprise" VerticalAlignment="Top" FontSize="16" Margin="19,65,0,0" Height="29" HorizontalAlignment="Left" Width="100
                "/>
        <Border BorderBrush="#FFBFBFBF" BorderThickness="1" Margin="140,0,0,0">
            <TextBox x:Name="Results_Textbox" TextWrapping="Wrap" BorderBrush="{x:Null}" Margin="1,1,-1,-1" FontSize="16" ScrollViewer.CanContentScroll="True" Background="White" Foreground="White" SelectionBrush="Black"/>
        </Border>
    </Grid>
</Window>

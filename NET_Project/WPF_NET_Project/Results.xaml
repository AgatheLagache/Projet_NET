<Window x:Name="Results1" x:Class="WPF_NET_Project.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NET_Project"
        mc:Ignorable="d"
        Title="Résultats" Height="450" Width="800" Closed="Results1_Closed">
    <Grid>
        <Button Content="Pause" VerticalAlignment="Top" FontSize="16" Margin="19,20,0,0" Height="29" HorizontalAlignment="Left" Width="100"/>
        <Button Content="Reprise" VerticalAlignment="Top" FontSize="16" Margin="19,65,0,0" Height="29" HorizontalAlignment="Left" Width="100"/>
        <Button Content="Accélerer" VerticalAlignment="Top" FontSize="16" Margin="19,110,0,0" Height="29" HorizontalAlignment="Left" Width="100"/>
        <TextBlock x:Name="messageBox" Foreground="White" Padding="10" MinHeight="379" TextWrapping="Wrap" Margin="147,0,0,0" Background="Black" FontSize="16" Text="&gt; Affichage des résultats..." />
    </Grid>
</Window>
